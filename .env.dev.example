# ==============================================
# HA-RAG Bridge Development Environment
# ==============================================
# Copy this file to .env for local development

# ==============================================
# Development Environment URLs
# ==============================================
# Change these based on your setup:
# - For local Docker services: use localhost
# - For external services: use actual IP addresses
# - For devcontainer: these will be available in terminal

# Home Assistant connection
HASS_URL=http://192.168.1.128:8123
HA_URL=http://192.168.1.128:8123
HA_TOKEN=your_home_assistant_token_here

# ArangoDB connection  
ARANGO_URL=http://192.168.1.105:8529
ARANGO_DB=ha_rag
ARANGO_USER=root
ARANGO_PASS=rootpassword

# ==============================================
# Development Settings
# ==============================================
LOG_LEVEL=DEBUG
DEBUG=true
DETAILED_LOGS=true

# Performance settings for development
HTTP_TIMEOUT=60
INGEST_BATCH_SIZE=5
BOOTSTRAP_TIMEOUT=120
REFRESH_INTERVAL=30
SERVICE_CACHE_TTL=300

# ==============================================
# Embedding Settings
# ==============================================
EMBEDDING_BACKEND=local
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBED_DIM=384

# API Keys (fill these in as needed)
GEMINI_API_KEY=
OPENAI_API_KEY=
ADMIN_TOKEN=dev_admin_token

# ==============================================
# Optional Integrations
# ==============================================
INFLUX_URL=http://192.168.1.128:8086
INFLUX_DB=homeassistant
INFLUX_USER=homeassistant
INFLUX_PASS=

# ==============================================
# Jupyter Settings
# ==============================================
JUPYTER_TOKEN=
JUPYTER_PASSWORD=

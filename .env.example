# .env.example
# Add this file to version control. Copy to .env and fill in values for local/dev.

# ArangoDB connection
ARANGO_URL=http://localhost:8529
ARANGO_DB=ha_rag
ARANGO_USER=root
ARANGO_PASS=changeme

# Bridge admin token
ADMIN_TOKEN=changeme

# Embedding provider
EMBEDDING_PROVIDER=local
OPENAI_API_KEY=
GEMINI_API_KEY=
GEMINI_BASE_URL=https://generativelanguage.googleapis.com
GEMINI_OUTPUT_DIM=1536

# InfluxDB integration
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=
INFLUX_ORG=homeassistant
INFLUX_BUCKET=ha
INFLUX_MEASUREMENT=

# Logging
LOG_LEVEL=INFO
LOG_FILE=
DEBUG=false
HTTP_TIMEOUT=30

# Service cache
SERVICE_CACHE_TTL=21600

# Other options
# Add further variables as needed for your deployment.

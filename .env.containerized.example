# ==============================================
# HA-RAG Bridge Containerized Development
# ==============================================
# Copy this file to .env for containerized development
# (when using docker-compose.dev.yml with local HA & ArangoDB)

# ==============================================
# Containerized Service URLs
# ==============================================
# These point to services running in Docker containers

# Home Assistant (containerized)
HASS_URL=http://homeassistant:8123
HA_URL=http://homeassistant:8123
HA_TOKEN=your_home_assistant_token_here

# ArangoDB (containerized)
ARANGO_URL=http://arangodb:8529
ARANGO_DB=ha_rag
ARANGO_USER=root
ARANGO_PASS=rootpassword

# ==============================================
# Development Settings
# ==============================================
LOG_LEVEL=DEBUG
DEBUG=true
DETAILED_LOGS=true

# Performance settings for development
HTTP_TIMEOUT=60
INGEST_BATCH_SIZE=5
BOOTSTRAP_TIMEOUT=120
REFRESH_INTERVAL=30
SERVICE_CACHE_TTL=300

# ==============================================
# Embedding Settings
# ==============================================
EMBEDDING_BACKEND=local
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBED_DIM=384

# API Keys (fill these in as needed)
GEMINI_API_KEY=
OPENAI_API_KEY=
ADMIN_TOKEN=dev_admin_token

# ==============================================
# Optional Integrations
# ==============================================
INFLUX_URL=http://localhost:8086
INFLUX_DB=homeassistant
INFLUX_USER=homeassistant
INFLUX_PASS=

# ==============================================
# Jupyter Settings
# ==============================================
JUPYTER_TOKEN=
JUPYTER_PASSWORD=

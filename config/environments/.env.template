# HA-RAG-Bridge Environment Configuration Template
# Copy this to .env.development, .env.production, or .env.testing and customize

# =============================================================================
# HOME ASSISTANT CONNECTION
# =============================================================================
HA_URL=http://localhost:8123
HA_TOKEN=your_home_assistant_token_here
ADMIN_TOKEN=changeme

# =============================================================================
# ARANGODB DATABASE
# =============================================================================
ARANGO_URL=http://localhost:8529
ARANGO_DB=homeassistant
ARANGO_USER=root
ARANGO_PASS=your_password_here

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================
EMBEDDING_BACKEND=local
SENTENCE_TRANSFORMER_MODEL=paraphrase-multilingual-mpnet-base-v2
EMBED_DIM=768

# External API keys (only if using openai/gemini backends)
OPENAI_API_KEY=your_openai_key_here
GEMINI_API_KEY=your_gemini_key_here
GEMINI_BASE_URL=https://generativelanguage.googleapis.com
GEMINI_OUTPUT_DIM=1536

# =============================================================================
# QUERY PROCESSING & CONVERSATION
# =============================================================================
# Query Rewriting
QUERY_REWRITING_ENABLED=true
QUERY_REWRITING_MODEL=home-llama-3b
QUERY_REWRITING_API_BASE=http://localhost:8001/v1
QUERY_REWRITING_API_KEY=fake-key
QUERY_REWRITING_TIMEOUT_MS=500
COREFERENCE_RESOLUTION_ENABLED=true

# Conversation Summarization
CONVERSATION_SUMMARY_ENABLED=true
CONVERSATION_SUMMARY_MODEL=home-llama-3b
CONVERSATION_SUMMARY_TIMEOUT=15000
CONVERSATION_SUMMARY_API_BASE=http://localhost:8001/v1
CONVERSATION_SUMMARY_API_KEY=fake-key

# Memory Settings
MEMORY_TOPIC_BOOST_ENABLED=true
MEMORY_DECAY_CONSTANT=300

# =============================================================================
# EXTERNAL INTEGRATIONS (OPTIONAL)
# =============================================================================
# InfluxDB (for time series data)
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=
INFLUX_ORG=homeassistant
INFLUX_BUCKET=ha
INFLUX_DB=homeassistant
INFLUX_USER=homeassistant
INFLUX_PASS=
INFLUX_MEASUREMENT=

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
LOG_LEVEL=INFO
DEBUG=false
LOG_FILE=

# Pipeline Tracing
TRACE_DETAIL_LEVEL=basic
TRACE_META_TASKS=false

# Cross Encoder Model
CROSS_ENCODER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
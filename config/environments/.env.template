# HA-RAG-Bridge Configuration Template
# Copy this to .env and update with your values

# =============================================================================
# HOME ASSISTANT CONNECTION  
# =============================================================================
HA_URL=http://your-ha-ip:8123
HA_TOKEN=your-ha-long-lived-access-token
ADMIN_TOKEN=your-admin-token-for-ui

# =============================================================================
# ARANGODB DATABASE
# =============================================================================
ARANGO_URL=http://your-arango-ip:8529
ARANGO_DB=homeassistant
ARANGO_USER=root
ARANGO_PASS=your-arango-password

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================
EMBEDDING_BACKEND=local
SENTENCE_TRANSFORMER_MODEL=paraphrase-multilingual-mpnet-base-v2
EMBED_DIM=768
EMBEDDING_CPU_THREADS=4

# =============================================================================
# API KEYS (OPTIONAL)
# =============================================================================
# OPENAI_API_KEY=sk-your-openai-api-key
# GEMINI_API_KEY=your-gemini-api-key

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
AUTO_BOOTSTRAP=true
HTTP_TIMEOUT=30
SERVICE_CACHE_TTL=21600

# =============================================================================
# QUERY PROCESSING
# =============================================================================
query_rewriting_enabled=true
query_rewriting_model=gpt-4o-mini
coreference_resolution_enabled=true
query_expansion_enabled=true
max_query_variants=3

# =============================================================================
# SIMILARITY THRESHOLDS
# =============================================================================
SIMILARITY_THRESHOLD_EXCELLENT=0.85
SIMILARITY_THRESHOLD_GOOD=0.75
SIMILARITY_THRESHOLD_FAIR=0.65
SIMILARITY_THRESHOLD_POOR=0.55
